<Window x:Class="MVC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVC"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button x:Name="GenerateDB" Width="100" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top" Click="GenerateDB_Click">Generate DB</Button>
            <Button x:Name="GenerateHTML" Width="100" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top" Click="GenerateHTML_Click">Generate HTML</Button>
        </StackPanel>
    </Grid>
</Window>
